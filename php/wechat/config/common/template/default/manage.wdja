                      <td height="25">{$=ii_itake('manage.mail_topic','lng')}</td>
                      <td><input type="text" name="mail_topic" size="40" value="{$mail_topic}"></td>
                    </tr>
                    <tr>
                      <td height="25">{$=ii_itake('manage.mail_body','lng')}</td>
                      <td><input type="text" name="mail_body" size="40" value="{$mail_body}"></td>
                    </tr>
                    <tr>
                      <td height="25"></td>
                      <td><input type="submit" name="submit" value="{$=ii_itake('global.lng_config.submit','lng')}" class="button"></td>
