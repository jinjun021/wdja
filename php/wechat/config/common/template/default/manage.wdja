                      <td height="25">{$=ii_itake('manage.templateid','lng')}</td>
                      <td><input type="text" name="templateid" size="40" value="{$templateid}"></td>
                    </tr>
                    <tr>
                      <td height="25">{$=ii_itake('manage.templateurl','lng')}</td>
